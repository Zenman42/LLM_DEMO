# === PostgreSQL ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=pt_user
POSTGRES_PASSWORD=changeme
POSTGRES_DB=position_tracker

# === ClickHouse ===
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DB=position_tracker

# === Redis (broker + result backend for Celery) ===
REDIS_URL=redis://localhost:6379/0

# === Demo Mode ===
DEMO_MODE=true
DEMO_USER_EMAIL=demo@llmtracker.com

# === Auth (not used in demo mode, but required by config validation) ===
JWT_SECRET_KEY=demo-mode-unused-placeholder-32chars
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
# JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# === Encryption key for tenant credentials ===
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=

# === Collector APIs ===
JUSTMAGIC_API_URL=https://api.just-magic.org/new_api/api.php
YWM_API_URL=https://api.webmaster.yandex.net/v4
YWM_USER_ID=

# === App ===
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# === CORS ===
# Comma-separated allowed origins. Use * for dev, specific origins for production.
ALLOWED_ORIGINS=*

# === Logging ===
LOG_LEVEL=INFO
# Set to true for structured JSON logs in production
LOG_JSON=false

# === Docker Compose port overrides (optional) ===
# HTTP_PORT=80
# PG_EXTERNAL_PORT=5432
# CH_EXTERNAL_PORT=8123
# CH_NATIVE_PORT=9000
# REDIS_EXTERNAL_PORT=6379
# WEB_WORKERS=4
# CELERY_CONCURRENCY=4
